{
  "name": "F1MV-Lights-Integration",
  "version": "1.0.0-beta",
  "description": "Connect your Govee, Tradfri and YeeLight lights to your F1MV",
  "author": "koningcool",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder --dir",
    "make": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.koningcool.f1mv.lights.integration",
    "productName": "F1MV-Lights-Integration",
    "copyright": "Copyright Â© 2022 ${author}",
    "generateUpdatesFilesForAllChannels": true,
    "asar": false,
    "asarUnpack": [],
    "files": [
      "!.node-persist/**/*",
      "!.devcontainer/**/*",
      "!.deepsource.toml",
      "!dist/**/*",
      "!devices.html"
    ],
    "directories": {
      "output": "out"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64",
            "ia32"
          ]
        },
        {
          "target": "msi",
          "arch": [
            "x64",
            "arm64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "arm64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64",
            "ia32"
          ]
        }
      ],
      "publish": [
        "github"
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "mas",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "pkg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": [
        {
            "target": "AppImage",
            "arch": [
                "x64",
                "arm64",
                "ia32"
            ]
            },
            {
            "target": "zip",
            "arch": [
                "x64",
                "arm64",
                "ia32"
            ]
        },
        {
            "target": "deb",
            "arch": [
                "x64",
                "arm64",
                "ia32"
            ]
        },
        {
            "target": "rpm",
            "arch": [
                "x64",
                "arm64",
                "ia32"
            ]
        },
        {
            "target": "pacman",
            "arch": [
                "x64",
                "arm64",
                "ia32"
            ]
        },
        {
            "target": "snap",
            "arch": [
                "x64",
                "arm64",
                "ia32"
            ]
        },
        {
            "target": "freebsd",
            "arch": [
                "x64",
                "arm64",
                "ia32"
            ]
        }
        ],
      "publish": [
        "github"
      ]
    }
  },
  "dependencies": {
    "@sentry/electron": "^4.1.2",
    "@sentry/tracing": "^7.24.2",
    "color-convert": "^2.0.1",
    "colorsys": "^1.0.22",
    "cors": "^2.8.5",
    "electron-localshortcut": "^3.2.1",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "express": "^4.18.2",
    "govee-lan-control": "^2.0.1",
    "ikea-tradfri": "^5.2.0",
    "jquery": "^3.6.1",
    "node-fetch": "^2.6.1",
    "node-govee-led": "^1.5.1",
    "node-hue-api": "^5.0.0-beta.15",
    "node-persist": "^3.1.0",
    "node-tradfri-client": "3.1.1",
    "process": "^0.11.10",
    "yeelight.io": "^1.1.7"
  },
  "devDependencies": {
    "electron": "^21.2.0",
    "electron-builder": "^23.6.0"
  }
}
