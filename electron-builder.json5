{
  "productName": "F1MV-Lights-Integration",
  "appId": "com.justjoostnl.f1mv.lights.integration",
  "copyright": "Copyright Â© 2023 JustJoostNL",

  generateUpdatesFilesForAllChannels: true,
  "asar": true,

  "directories": {
    "output": "out"
  },


  "files": [
    "!.deepsource.toml",
    "!dist/**/*",
    "!node_modules/**/*.{mk,a,o,h}",
    "!node_modules/node-hid/build/Release/.forge-meta",
    "dist-electron",
    "dist"
  ],


  "mac": {
    category: "public.app-category.utilities",
    minimumSystemVersion: "10.12.0",
    "target": [
      "dmg"
    ]
  },


  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
  },


  "linux": {
    mimeTypes: ["x-scheme-handler/f1mvli"],
    desktop: {
      exec: "f1mvli %u",
    },
    category: "Utility",
    "target": [
      "AppImage"
    ],
  },

  "appImage": {
    "category": "Utility"
  },


  "nsis": {
    "oneClick": true,
    "perMachine": true,
    "deleteAppDataOnUninstall": true
  },


  "publish": {
    "provider": "github",
    "updaterCacheDirName": "F1MV-Lights-Integration-update-cache",
  }
}
