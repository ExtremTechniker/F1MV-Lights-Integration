{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "node",
    "strict": false,
  },
  "include": [
    "vite.config.ts",
    "package.json",
    "src/main/*.ts",
    "src/shared/*",
    "src/preload/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
